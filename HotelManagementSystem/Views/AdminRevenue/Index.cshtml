@model DTOs.RevenueReportDto

@{
    ViewData["Title"] = "Revenue Management";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="page-header">
    <h1 class="page-title">Revenue Management</h1>
    <div class="text-muted small">Revenue statistics and reports</div>
</div>

<!-- Filter Section -->
<div class="card-admin">
    <div class="card-header bg-white">
        <h5 class="mb-0">Filter Report</h5>
    </div>
    <div class="card-body">
        <form method="get" asp-action="Index">
            <div class="row g-3">
                <div class="col-md-3">
                    <label class="form-label text-muted small fw-bold">Period Type</label>
                    <select name="periodType" class="form-select" onchange="this.form.submit()">
                        <option value="day" selected="@(ViewBag.PeriodType == "day")">Day</option>
                        <option value="week" selected="@(ViewBag.PeriodType == "week")">Week</option>
                        <option value="month" selected="@(ViewBag.PeriodType == "month")">Month</option>
                        <option value="year" selected="@(ViewBag.PeriodType == "year")">Year</option>
                        <option value="custom" selected="@(ViewBag.PeriodType == "custom")">Custom Range</option>
                    </select>
                </div>
                <div class="col-md-3">
                    <label class="form-label text-muted small fw-bold">Start Date</label>
                    <input type="date" name="startDate" class="form-control" value="@ViewBag.StartDate" />
                </div>
                <div class="col-md-3">
                    <label class="form-label text-muted small fw-bold">End Date</label>
                    <input type="date" name="endDate" class="form-control" value="@ViewBag.EndDate" />
                </div>
                <div class="col-md-3 d-flex align-items-end">
                    <button type="submit" class="btn btn-primary w-100 shadow-sm">Apply Filter</button>
                </div>
            </div>
        </form>
    </div>
</div>

<!-- Revenue Summary Cards -->
<div class="row mb-4">
    <div class="col-md-4">
        <div class="card-admin bg-primary text-white h-100">
            <div class="card-body">
                <h5 class="card-title fw-light text-white-50">Total Revenue</h5>
                <h2 class="mb-0 fw-bold">@Model.Revenue.TotalRevenue.ToString("C")</h2>
                <small class="text-white-50">@Model.Revenue.PeriodType</small>
            </div>
        </div>
    </div>
    <div class="col-md-4">
        <div class="card-admin bg-danger text-white h-100">
            <div class="card-body">
                <h5 class="card-title fw-light text-white-50">Total Cost</h5>
                <h2 class="mb-0 fw-bold">@Model.Revenue.TotalCost.ToString("C")</h2>
                <small class="text-white-50">@Model.Revenue.PeriodType</small>
            </div>
        </div>
    </div>
    <div class="col-md-4">
        <div class="card-admin bg-success text-white h-100">
            <div class="card-body">
                <h5 class="card-title fw-light text-white-50">Profit</h5>
                <h2 class="mb-0 fw-bold">@Model.Revenue.Profit.ToString("C")</h2>
                <small class="text-white-50">@Model.Revenue.PeriodType</small>
            </div>
        </div>
    </div>
</div>

<!-- Revenue by Room Type -->
<div class="card-admin">
    <div class="card-header bg-white">
        <h5 class="mb-0">Revenue by Room Type</h5>
    </div>
    <div class="card-body p-0">
        <div class="table-responsive">
            <table class="table table-admin table-hover mb-0">
                <thead>
                    <tr>
                        <th>Room Type</th>
                        <th>Booking Count</th>
                        <th>Total Revenue</th>
                        <th>Average Revenue</th>
                    </tr>
                </thead>
                <tbody>
                    @if (Model.RevenueByRoomType != null && Model.RevenueByRoomType.Any())
                    {
                        @foreach (var item in Model.RevenueByRoomType)
                        {
                            <tr>
                                <td class="fw-bold">@item.RoomType</td>
                                <td>@item.BookingCount</td>
                                <td>@item.TotalRevenue.ToString("C")</td>
                                <td>@item.AverageRevenue.ToString("C")</td>
                            </tr>
                        }
                    }
                    else
                    {
                        <tr>
                            <td colspan="4" class="text-center text-muted py-4">No data available</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

<!-- Payment Method Statistics -->
<div class="card-admin">
    <div class="card-header bg-white">
        <h5 class="mb-0">Payment Method Statistics</h5>
    </div>
    <div class="card-body p-0">
        <div class="table-responsive">
            <table class="table table-admin table-hover mb-0">
                <thead>
                    <tr>
                        <th>Payment Method</th>
                        <th>Transaction Count</th>
                        <th>Total Amount</th>
                        <th>Percentage</th>
                        <th style="width: 30%">Visual</th>
                    </tr>
                </thead>
                <tbody>
                    @if (Model.PaymentMethodStats != null && Model.PaymentMethodStats.Any())
                    {
                        @foreach (var item in Model.PaymentMethodStats)
                        {
                            <tr>
                                <td class="fw-bold">@item.PaymentMethod</td>
                                <td>@item.TransactionCount</td>
                                <td>@item.TotalAmount.ToString("C")</td>
                                <td>@item.Percentage.ToString("F1")%</td>
                                <td>
                                    <div class="progress" style="height: 10px;">
                                        <div class="progress-bar" role="progressbar" style="width: @item.Percentage%" aria-valuenow="@item.Percentage" aria-valuemin="0" aria-valuemax="100"></div>
                                    </div>
                                </td>
                            </tr>
                        }
                    }
                    else
                    {
                        <tr>
                            <td colspan="5" class="text-center text-muted py-4">No data available</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

<div class="fw-bold text-muted small text-end">
    Report Period: @Model.Revenue.StartDate.ToString("MMM dd, yyyy") - @Model.Revenue.EndDate.ToString("MMM dd, yyyy")
</div>
