@model DTOs.RoomCleaningDto

@{
    ViewData["Title"] = "Update Cleaning Task";
}

<h1>Manage Task</h1>
<h4>Room @Model.RoomNumber</h4>
<hr />

<div class="row">
    <div class="col-md-6">
        <form asp-action="Edit">
            <input type="hidden" asp-for="Id" />

            <div class="form-group mb-3">
                <label class="control-label fw-bold">Status</label>
                <select name="status" class="form-control" asp-items="ViewBag.Statuses" asp-for="Status"></select>
            </div>

            <div class="form-group mb-3">
                <label class="control-label fw-bold">Assign Staff</label>
                <select name="staffUserId" class="form-control" asp-items="ViewBag.Staff">
                    <option value="">-- Unassigned --</option>
                </select>
                <small class="text-muted">Select a cleaner to assign this task.</small>
            </div>

            <div class="form-group mt-4">
                <input type="submit" value="Save Changes" class="btn btn-primary" />
                <a asp-action="Index" class="btn btn-secondary">Back to List</a>
            </div>
        </form>
    </div>
</div>