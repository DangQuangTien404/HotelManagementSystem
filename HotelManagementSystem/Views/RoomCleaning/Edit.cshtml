@model DTOs.RoomCleaningDto

@{
    ViewData["Title"] = "Update Cleaning Status";
}

<h1>Update Status</h1>

<h4>Room @Model.RoomNumber - @Model.CleanerName</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <label class="control-label">Status</label>
                <select name="status" class="form-control" asp-items="ViewBag.Statuses" asp-for="Status"></select>
            </div>
            <div class="form-group mt-2">
                <input type="submit" value="Update" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>
<div>
    <a asp-action="Index">Back to List</a>
</div>
