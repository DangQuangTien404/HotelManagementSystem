@model IEnumerable<DTOs.RoomCleaningDto>

@{
    ViewData["Title"] = "Housekeeping Dashboard";
}

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h2><i class="bi bi-bucket"></i> Housekeeping Dashboard</h2>
        <a asp-action="Assign" class="btn btn-primary">
            <i class="bi bi-plus-lg"></i> Assign New Task
        </a>
    </div>

    <div class="card shadow-sm">
        <div class="card-body p-0">
            <table class="table table-hover align-middle mb-0">
                <thead class="table-light">
                    <tr>
                        <th class="ps-4">Room</th>
                        <th>Cleaner</th>
                        <th>Assigned Date</th>
                        <th>Status</th>
                        <th class="text-center">Action</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td class="ps-4">
                                <span class="badge bg-secondary fs-6">@item.RoomNumber</span>
                            </td>
                            <td>
                                @if (string.IsNullOrEmpty(item.CleanerName))
                                {
                                    <span class="text-muted fst-italic">Unassigned</span>
                                }
                                else
                                {
                                    <strong>@item.CleanerName</strong>
                                }
                            </td>
                            <td>@item.CleaningDate.ToString("dd/MM/yyyy HH:mm")</td>
                            <td>
                                @if (item.Status == "Completed" || item.Status == "Clean")
                                {
                                    <span class="badge bg-success">Clean</span>
                                }
                                else if (item.Status == "Pending" || item.Status == "Dirty")
                                {
                                    <span class="badge bg-danger">Dirty</span>
                                }
                                else
                                {
                                    <span class="badge bg-warning text-dark">@item.Status</span>
                                }
                            </td>
                            <td class="text-center">
                                <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-outline-primary">
                                    <i class="bi bi-pencil-square"></i> Update Status
                                </a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>

            @if (!Model.Any())
            {
                <div class="p-5 text-center text-muted">
                    <h5>No active cleaning tasks.</h5>
                    <p>All rooms are clean or haven't been assigned yet.</p>
                </div>
            }
        </div>
    </div>
</div>