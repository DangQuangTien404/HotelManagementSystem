@model IEnumerable<DTOs.RoomCleaningDto>

@{
    ViewData["Title"] = "Cleaning Schedule";
}

<h1>Cleaning Schedule</h1>

<p>
    <a asp-action="Assign" class="btn btn-primary">Assign New Cleaning</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>Room</th>
            <th>Cleaner</th>
            <th>Date</th>
            <th>Status</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>@item.RoomNumber</td>
            <td>@item.CleanerName</td>
            <td>@item.CleaningDate</td>
            <td>
                @if(item.Status == "Completed")
                {
                    <span class="badge bg-success">@item.Status</span>
                }
                else if(item.Status == "In Progress")
                {
                    <span class="badge bg-warning">@item.Status</span>
                }
                else
                {
                    <span class="badge bg-secondary">@item.Status</span>
                }
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id">Update Status</a>
            </td>
        </tr>
}
    </tbody>
</table>
