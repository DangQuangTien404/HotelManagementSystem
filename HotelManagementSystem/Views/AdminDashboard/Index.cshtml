@{
    ViewData["Title"] = "Admin Dashboard";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="page-header">
    <h1 class="page-title">Dashboard Overview</h1>
    <div class="text-muted small">Welcome, @User.Identity.Name</div>
</div>

<div class="row">
    <div class="col-md-3 mb-4">
        <div class="card card-admin text-center p-3 h-100">
            <div class="card-body">
                <i class="bi bi-people display-4 text-primary mb-3"></i>
                <h5 class="card-title">Staff</h5>
                <p class="card-text text-muted">Manage hotel staff</p>
                <a asp-controller="AdminStaff" asp-action="Index" class="btn btn-outline-primary btn-sm stretched-link">Go to Staff</a>
            </div>
        </div>
    </div>
    <div class="col-md-3 mb-4">
        <div class="card card-admin text-center p-3 h-100">
            <div class="card-body">
                <i class="bi bi-person display-4 text-success mb-3"></i>
                <h5 class="card-title">Customers</h5>
                <p class="card-text text-muted">View customer details</p>
                <a asp-controller="AdminCustomer" asp-action="Index" class="btn btn-outline-success btn-sm stretched-link">Go to Customers</a>
            </div>
        </div>
    </div>
    <div class="col-md-3 mb-4">
        <div class="card card-admin text-center p-3 h-100">
            <div class="card-body">
                <i class="bi bi-clipboard-check display-4 text-warning mb-3"></i>
                <h5 class="card-title">Tasks</h5>
                <p class="card-text text-muted">Assign maintenance</p>
                <a asp-controller="AdminTask" asp-action="Index" class="btn btn-outline-warning btn-sm stretched-link">Go to Tasks</a>
            </div>
        </div>
    </div>
    <div class="col-md-3 mb-4">
        <div class="card card-admin text-center p-3 h-100">
            <div class="card-body">
                <i class="bi bi-cash-coin display-4 text-danger mb-3"></i>
                <h5 class="card-title">Revenue</h5>
                <p class="card-text text-muted">Check financial stats</p>
                <a asp-controller="AdminRevenue" asp-action="Index" class="btn btn-outline-danger btn-sm stretched-link">Go to Revenue</a>
            </div>
        </div>
    </div>
</div>
