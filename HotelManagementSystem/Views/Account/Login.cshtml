@model DTOs.LoginDto

@{
    ViewData["Title"] = "Log in";
}

<div class="container py-5 h-100">
    <div class="row d-flex justify-content-center align-items-center h-100">
        <div class="col-12 col-md-8 col-lg-6 col-xl-5">
            <div class="card shadow-lg border-0" style="border-radius: 1rem; backdrop-filter: blur(10px); background: rgba(255, 255, 255, 0.9);">
                <div class="card-body p-5 text-center">

                    <div class="mb-md-5 mt-md-4 pb-0">

                        <h2 class="fw-bold mb-2 text-uppercase text-primary" style="letter-spacing: 2px;">Welcome Back!</h2>
                        <p class="text-black-50 mb-5">Please enter your login and password!</p>

                        <form asp-action="Login">
                            <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                            <div class="form-floating mb-4">
                                <input asp-for="Username" class="form-control form-control-lg" placeholder="Username" />
                                <label asp-for="Username">Username</label>
                                <span asp-validation-for="Username" class="text-danger small text-start d-block"></span>
                            </div>

                            <div class="form-floating mb-4">
                                <input asp-for="Password" type="password" class="form-control form-control-lg" placeholder="Password" />
                                <label asp-for="Password">Password</label>
                                <span asp-validation-for="Password" class="text-danger small text-start d-block"></span>
                            </div>

                            <div class="d-grid gap-2">
                                <button class="btn btn-primary btn-lg px-5 shadow-sm" type="submit">Login</button>
                            </div>

                        </form>

                    </div>

                    <div>
                        <p class="mb-0">Don't have an account? <a asp-action="Register" class="text-primary fw-bold text-decoration-none">Sign Up</a></p>
                    </div>

                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
