@model IEnumerable<DTOs.StaffDto>

@{
    ViewData["Title"] = "Staff Management";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="page-header">
    <h1 class="page-title">Staff Management</h1>
    <a asp-action="Create" class="btn btn-primary shadow-sm">
        <i class="bi bi-plus-circle"></i> Create New Staff
    </a>
</div>

@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success alert-dismissible fade show shadow-sm" role="alert">
        <i class="bi bi-check-circle me-2"></i>@TempData["SuccessMessage"]
        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
    </div>
}

@if (TempData["ErrorMessage"] != null)
{
    <div class="alert alert-danger alert-dismissible fade show shadow-sm" role="alert">
         <i class="bi bi-exclamation-circle me-2"></i>@TempData["ErrorMessage"]
        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
    </div>
}

<div class="card-admin">
    <div class="card-body p-0">
        <div class="table-responsive">
            <table class="table table-admin table-hover mb-0">
                <thead>
                    <tr>
                        <th>Full Name</th>
                        <th>Username</th>
                        <th>Email</th>
                        <th>Position</th>
                        <th>Shift</th>
                        <th>Hire Date</th>
                        <th class="text-end">Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @if (Model != null && Model.Any())
                    {
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td class="fw-bold">@item.FullName</td>
                                <td>@item.Username</td>
                                <td>@item.Email</td>
                                <td>
                                    <span class="badge badge-soft-info rounded-pill px-3">@item.Position</span>
                                </td>
                                <td>
                                    @if(item.Shift == "Day") { <span class="badge badge-soft-warning"><i class="bi bi-sun"></i> Day</span> }
                                    else if(item.Shift == "Night") { <span class="badge badge-soft-dark"><i class="bi bi-moon"></i> Night</span> }
                                    else { <span class="badge badge-soft-success">@item.Shift</span> }
                                </td>
                                <td>@item.HireDate.ToString("MMM dd, yyyy")</td>
                                <td class="text-end">
                                    <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-outline-warning me-1">
                                        <i class="bi bi-pencil"></i>
                                    </a>
                                    <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-outline-danger">
                                        <i class="bi bi-trash"></i>
                                    </a>
                                </td>
                            </tr>
                        }
                    }
                    else
                    {
                        <tr>
                            <td colspan="7" class="text-center text-muted py-5">
                                <i class="bi bi-people display-4 d-block mb-3 opacity-50"></i>
                                No staff members found.
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
