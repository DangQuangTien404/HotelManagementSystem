@model DTOs.StaffDto

@{
    ViewData["Title"] = "Create New Staff";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="row justify-content-center">
    <div class="col-md-8">
        <div class="card-admin">
            <div class="card-header bg-white">
                <h5 class="mb-0">Create New Staff Member</h5>
            </div>
            <div class="card-body">
                <form asp-action="Create">
                    <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>

                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label asp-for="FullName" class="form-label text-muted small text-uppercase fw-bold">Full Name</label>
                            <input asp-for="FullName" class="form-control" />
                            <span asp-validation-for="FullName" class="text-danger small"></span>
                        </div>
                        <div class="col-md-6 mb-3">
                            <label asp-for="Email" class="form-label text-muted small text-uppercase fw-bold">Email</label>
                            <input asp-for="Email" type="email" class="form-control" />
                            <span asp-validation-for="Email" class="text-danger small"></span>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label asp-for="Username" class="form-label text-muted small text-uppercase fw-bold">Username</label>
                            <input asp-for="Username" class="form-control" />
                            <span asp-validation-for="Username" class="text-danger small"></span>
                        </div>
                        <div class="col-md-6 mb-3">
                            <label asp-for="Password" class="form-label text-muted small text-uppercase fw-bold">Password</label>
                            <input asp-for="Password" type="password" class="form-control" />
                            <span asp-validation-for="Password" class="text-danger small"></span>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-md-4 mb-3">
                            <label asp-for="Position" class="form-label text-muted small text-uppercase fw-bold">Position</label>
                            <input asp-for="Position" class="form-control" placeholder="e.g., Receptionist" />
                            <span asp-validation-for="Position" class="text-danger small"></span>
                        </div>
                        <div class="col-md-4 mb-3">
                            <label asp-for="Shift" class="form-label text-muted small text-uppercase fw-bold">Shift</label>
                            <select asp-for="Shift" class="form-select">
                                <option value="Day">Day</option>
                                <option value="Night">Night</option>
                                <option value="Full">Full</option>
                            </select>
                            <span asp-validation-for="Shift" class="text-danger small"></span>
                        </div>
                        <div class="col-md-4 mb-3">
                            <label asp-for="HireDate" class="form-label text-muted small text-uppercase fw-bold">Hire Date</label>
                            <input asp-for="HireDate" type="date" class="form-control" />
                            <span asp-validation-for="HireDate" class="text-danger small"></span>
                        </div>
                    </div>

                    <div class="mt-4 d-flex justify-content-end gap-2">
                        <a asp-action="Index" class="btn btn-light">Cancel</a>
                        <button type="submit" class="btn btn-primary px-4">Create Staff</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
