@model DTOs.StaffDto

@{
    ViewData["Title"] = "Create New Staff";
}

<div class="container-fluid">
    <div class="row">
        <!-- Sidebar màu xanh nước biển -->
        <div class="col-md-3 col-lg-2 px-0" style="background-color: #0066cc; min-height: 100vh; position: fixed; left: 0; top: 56px; z-index: 1000;">
            <div class="p-3">
                <h5 class="text-white mb-4">Admin Panel</h5>
                <ul class="nav flex-column">
                    <li class="nav-item mb-2">
                        <a class="nav-link text-white active" style="background-color: rgba(255,255,255,0.2); border-radius: 5px;" asp-controller="AdminStaff" asp-action="Index">
                            <i class="bi bi-people"></i> Staff Management
                        </a>
                    </li>
                    <li class="nav-item mb-2">
                        <a class="nav-link text-white" href="#" style="opacity: 0.7;">
                            <i class="bi bi-person"></i> Customer Management
                        </a>
                    </li>
                    <li class="nav-item mb-2">
                        <a class="nav-link text-white" asp-controller="AdminTask" asp-action="Index">
                            <i class="bi bi-clipboard-check"></i> Task Assignment
                        </a>
                    </li>
                    <li class="nav-item mb-2">
                        <a class="nav-link text-white" href="#" style="opacity: 0.7;">
                            <i class="bi bi-bell"></i> Notifications
                        </a>
                    </li>
                    <li class="nav-item mb-2">
                        <a class="nav-link text-white" href="#" style="opacity: 0.7;">
                            <i class="bi bi-cash-coin"></i> Revenue Management
                        </a>
                    </li>
                </ul>
            </div>
        </div>

        <!-- Main Content -->
        <div class="col-md-9 col-lg-10 ms-auto" style="margin-left: 16.66666667%;">
            <div class="p-4">
                <h1>Create New Staff</h1>
                <hr />

                <div class="row">
                    <div class="col-md-8">
                        <form asp-action="Create">
                            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                            
                            <div class="mb-3">
                                <label asp-for="Username" class="form-label">Username</label>
                                <input asp-for="Username" class="form-control" />
                                <span asp-validation-for="Username" class="text-danger"></span>
                            </div>

                            <div class="mb-3">
                                <label asp-for="Password" class="form-label">Password</label>
                                <input asp-for="Password" type="password" class="form-control" />
                                <span asp-validation-for="Password" class="text-danger"></span>
                            </div>

                            <div class="mb-3">
                                <label asp-for="FullName" class="form-label">Full Name</label>
                                <input asp-for="FullName" class="form-control" />
                                <span asp-validation-for="FullName" class="text-danger"></span>
                            </div>

                            <div class="mb-3">
                                <label asp-for="Email" class="form-label">Email</label>
                                <input asp-for="Email" type="email" class="form-control" />
                                <span asp-validation-for="Email" class="text-danger"></span>
                            </div>

                            <div class="mb-3">
                                <label asp-for="Position" class="form-label">Position</label>
                                <input asp-for="Position" class="form-control" placeholder="e.g., Receptionist, Housekeeper, Manager" />
                                <span asp-validation-for="Position" class="text-danger"></span>
                            </div>

                            <div class="mb-3">
                                <label asp-for="Shift" class="form-label">Shift</label>
                                <select asp-for="Shift" class="form-select">
                                    <option value="Day">Day</option>
                                    <option value="Night">Night</option>
                                    <option value="Full">Full</option>
                                </select>
                                <span asp-validation-for="Shift" class="text-danger"></span>
                            </div>

                            <div class="mb-3">
                                <label asp-for="HireDate" class="form-label">Hire Date</label>
                                <input asp-for="HireDate" type="date" class="form-control" />
                                <span asp-validation-for="HireDate" class="text-danger"></span>
                            </div>

                            <div class="form-group">
                                <input type="submit" value="Create" class="btn btn-primary" />
                                <a asp-action="Index" class="btn btn-secondary">Back</a>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

