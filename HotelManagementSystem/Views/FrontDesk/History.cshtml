@model IEnumerable<DTOs.Entities.Reservation>

@{
    ViewData["Title"] = "Guest History";
}

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h2><i class="bi bi-clock-history"></i> Guest History</h2>
        <a asp-action="Index" class="btn btn-secondary">Back to Front Desk</a>
    </div>

    <div class="card shadow-sm mb-4">
        <div class="card-body bg-light">
            <form method="get" asp-action="History" class="row g-3">

                <div class="col-md-4">
                    <label class="form-label">Search</label>
                    <input type="text" name="search" class="form-control"
                           placeholder="Guest Name, Phone, or ID..."
                           value="@ViewBag.CurrentSearch">
                </div>

                <div class="col-md-3">
                    <label class="form-label">From Date</label>
                    <input type="date" name="start" class="form-control"
                           value="@ViewBag.Start">
                </div>

                <div class="col-md-3">
                    <label class="form-label">To Date</label>
                    <input type="date" name="end" class="form-control"
                           value="@ViewBag.End">
                </div>

                <div class="col-md-2 d-flex align-items-end gap-2">
                    <button type="submit" class="btn btn-primary w-100">
                        <i class="bi bi-search"></i> Filter
                    </button>
                    <a asp-action="History" class="btn btn-outline-secondary" title="Reset">
                        <i class="bi bi-x-lg"></i>
                    </a>
                </div>
            </form>
        </div>
    </div>

    <div class="card shadow-sm">
        <div class="card-body p-0">
            <table class="table table-hover align-middle mb-0">
                <thead class="table-light">
                    <tr>
                        <th class="ps-4">ID</th>
                        <th>Guest</th>
                        <th>Room</th>
                        <th>Check-In</th>
                        <th>Check-Out</th>
                        <th class="text-end">Total Paid</th>
                        <th class="text-center">Action</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        var record = item.CheckInOuts.OrderByDescending(c => c.CheckOutTime).FirstOrDefault();
                        var total = record?.TotalAmount ?? 0;

                        <tr>
                            <td class="ps-4">#@item.Id</td>
                            <td>
                                <strong>@item.Customer.FullName</strong><br />
                                <small class="text-muted">@item.Customer.Phone</small>
                            </td>
                            <td>
                                <span class="badge bg-secondary">@item.Room.RoomNumber</span>
                                <small>@item.Room.RoomType</small>
                            </td>
                            <td>@(record?.CheckInTime?.ToString("dd/MM/yyyy HH:mm") ?? "-")</td>
                            <td>@(record?.CheckOutTime?.ToString("dd/MM/yyyy HH:mm") ?? "-")</td>
                            <td class="text-end text-success fw-bold">@total.ToString("N0") &#8363;</td>
                            <td class="text-center">
                                <a asp-action="Invoice" asp-route-id="@item.Id" class="btn btn-sm btn-outline-primary">
                                    <i class="bi bi-receipt"></i> Invoice
                                </a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>

            @if (!Model.Any())
            {
                <div class="p-5 text-center text-muted">
                    <h5>No history records found.</h5>
                    <p>Try adjusting your search filters.</p>
                </div>
            }
        </div>
    </div>
</div>