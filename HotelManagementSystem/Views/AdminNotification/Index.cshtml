@model IEnumerable<DTOs.NotificationDto>

@{
    ViewData["Title"] = "Notifications";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="page-header">
    <h1 class="page-title">Notifications</h1>
    <div class="text-muted small">Manage communications sent to users and staff</div>
</div>

@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success alert-dismissible fade show shadow-sm" role="alert">
         <i class="bi bi-check-circle me-2"></i>@TempData["SuccessMessage"]
        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
    </div>
}

@if (TempData["ErrorMessage"] != null)
{
    <div class="alert alert-danger alert-dismissible fade show shadow-sm" role="alert">
        <i class="bi bi-exclamation-circle me-2"></i>@TempData["ErrorMessage"]
        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
    </div>
}

<!-- Send Notification Forms -->
<div class="row mb-4">
    <!-- Send to Staff -->
    <div class="col-md-4">
        <div class="card-admin h-100">
            <div class="card-header bg-primary text-white">
                <div class="d-flex align-items-center">
                    <i class="bi bi-people-fill me-2"></i>
                    <h5 class="mb-0 text-white">Send to Staff</h5>
                </div>
            </div>
            <div class="card-body">
                <form asp-action="SendToStaff" method="post">
                    <div class="mb-3">
                        <label class="form-label text-muted small fw-bold">Message</label>
                        <textarea name="Message" class="form-control" rows="4" placeholder="Type your message here..." required></textarea>
                    </div>
                    <button type="submit" class="btn btn-primary w-100 shadow-sm">
                        <i class="bi bi-send"></i> Send to All Staff
                    </button>
                </form>
            </div>
        </div>
    </div>

    <!-- Send to Customer -->
    <div class="col-md-4">
        <div class="card-admin h-100">
            <div class="card-header bg-success text-white">
                <div class="d-flex align-items-center">
                    <i class="bi bi-person-fill me-2"></i>
                    <h5 class="mb-0 text-white">Send to Customer</h5>
                </div>
            </div>
            <div class="card-body">
                <form asp-action="SendToCustomer" method="post">
                    <div class="mb-3">
                        <label class="form-label text-muted small fw-bold">Select Customer</label>
                        <select name="RecipientId" class="form-select">
                            <option value="">All Customers</option>
                        @if (ViewBag.Customers != null)
                        {
                            @foreach (var customer in ViewBag.Customers as SelectList)
                            {
                                <option value="@customer.Value">@customer.Text</option>
                            }
                        }
                        </select>
                        <small class="text-muted d-block mt-1">Leave empty to send to all</small>
                    </div>
                    <div class="mb-3">
                        <label class="form-label text-muted small fw-bold">Message</label>
                        <textarea name="Message" class="form-control" rows="3" placeholder="Type your message here..." required></textarea>
                    </div>
                    <button type="submit" class="btn btn-success w-100 shadow-sm">
                        <i class="bi bi-send"></i> Send
                    </button>
                </form>
            </div>
        </div>
    </div>

    <!-- Create Announcement -->
    <div class="col-md-4">
        <div class="card-admin h-100">
            <div class="card-header bg-warning text-dark">
                <div class="d-flex align-items-center">
                    <i class="bi bi-megaphone-fill me-2"></i>
                    <h5 class="mb-0">Create Announcement</h5>
                </div>
            </div>
            <div class="card-body">
                <form asp-action="CreateAnnouncement" method="post">
                    <div class="mb-3">
                        <label class="form-label text-muted small fw-bold">Announcement Text</label>
                        <textarea name="Message" class="form-control" rows="4" placeholder="Type your announcement here..." required></textarea>
                    </div>
                    <button type="submit" class="btn btn-warning w-100 shadow-sm">
                        <i class="bi bi-broadcast"></i> Broadcast
                    </button>
                </form>
            </div>
        </div>
    </div>
</div>

<!-- Notifications List -->
<div class="card-admin">
    <div class="card-header bg-white">
        <h5 class="mb-0">All Notifications</h5>
    </div>
    <div class="card-body p-0">
        <div class="table-responsive">
            <table class="table table-admin table-hover mb-0">
                <thead>
                    <tr>
                        <th>Sender</th>
                        <th>Message</th>
                        <th>Recipient</th>
                        <th>Sent At</th>
                        <th>Type</th>
                        <th class="text-end">Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @if (Model != null && Model.Any())
                    {
                        @foreach (var notification in Model)
                        {
                            <tr class="@(notification.IsRead ? "" : "bg-light-blue")">
                                <td>
                                    <div class="d-flex align-items-center">
                                        <div class="fw-bold me-2">@notification.SenderName</div>
                                        @if (!string.IsNullOrEmpty(notification.SenderType))
                                        {
                                            <span class="badge badge-soft-secondary" style="font-size: 0.7em;">@notification.SenderType</span>
                                        }
                                    </div>
                                </td>
                                <td>
                                    <div style="max-width: 300px;" class="text-truncate" title="@notification.Message">
                                        @if (notification.IsAnnouncement)
                                        {
                                            <span class="badge bg-warning text-dark me-1" style="font-size: 0.7em;">ðŸ“¢</span>
                                        }
                                        @notification.Message
                                    </div>
                                </td>
                                <td>
                                    @if (notification.RecipientType == "All") { <span class="badge badge-soft-info">All Users</span> }
                                    else if (notification.RecipientType == "Staff") { <span class="badge badge-soft-primary">All Staff</span> }
                                    else if (notification.RecipientType == "Customer") { <span class="badge badge-soft-success">All Customers</span> }
                                    else if (!string.IsNullOrEmpty(notification.RecipientName)) { <span>@notification.RecipientName</span> }
                                    else { <span class="text-muted">-</span> }
                                </td>
                                <td class="text-muted small">
                                    @notification.CreatedAt.ToString("MMM dd HH:mm")
                                </td>
                                <td>
                                    @if (notification.IsAnnouncement) { <span class="badge badge-soft-warning">Announcement</span> }
                                    else { <span class="badge badge-soft-secondary">Notification</span> }
                                </td>
                                <td class="text-end">
                                    @if (!notification.IsRead)
                                    {
                                        <form asp-action="MarkAsRead" method="post" class="d-inline">
                                            <input type="hidden" name="id" value="@notification.Id" />
                                            <button type="submit" class="btn btn-sm btn-outline-primary" title="Mark as Read">
                                                <i class="bi bi-check-circle"></i>
                                            </button>
                                        </form>
                                    }
                                    else
                                    {
                                        <span class="text-muted small"><i class="bi bi-check2-all"></i> Read</span>
                                    }
                                </td>
                            </tr>
                        }
                    }
                    else
                    {
                        <tr>
                            <td colspan="6" class="text-center text-muted py-4">No notifications found</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
